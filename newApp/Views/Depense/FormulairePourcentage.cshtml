<div class="container mt-4">
    <h2 class="text-center mb-4">Modifier le Pourcentage</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm rounded bg-light p-4">
                <h5 class="fw-bold text-center">Mise à jour du Pourcentage</h5>
                
                <form action="/Depense/ModifierPourcentage" method="post">
                    <div class="mb-3">
                        <label for="pourcentage" class="form-label fw-bold">Nouveau Pourcentage (%)</label>
                        <input type="number" step="0.01" name="pourcentage" id="pourcentage" class="form-control" required>
                    </div>
                    
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-success fw-bold" type="submit">Mettre à Jour</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
